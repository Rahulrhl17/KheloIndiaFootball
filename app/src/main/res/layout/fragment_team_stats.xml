<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.TeamStats"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/headerTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/seasonStatsText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:fontFamily="@font/titillium_web"
                android:text="SEASON STATS"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/teamHistoryText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gray"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:fontFamily="@font/titillium_web"
                android:text="TEAM HISTORY"
                android:textColor="@color/black"
                />


        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/seasonStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp"
                android:layout_margin="10dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/titillium_web"
                            android:textSize="15sp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:layout_centerVertical="true"
                            android:text="MATCHES PLAYED"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="8dp"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/titillium_web"
                            android:textSize="15sp"
                            android:text="19"
                            android:textColor="@color/black"/>
                    </RelativeLayout>
                    <view
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/black"
                        android:layout_marginTop="5dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="8dp"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/titillium_web"
                            android:text="Wins"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="8dp"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/titillium_web"
                            android:textSize="15sp"
                            android:text="10"
                            android:textColor="@color/black"/>
                    </RelativeLayout>
                    <view
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/black"
                        android:layout_marginTop="5dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="8dp"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/titillium_web"
                            android:text="Losses"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="8dp"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/titillium_web"
                            android:textSize="15sp"
                            android:text="6"
                            android:textColor="@color/black"/>
                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:text="26 Jan 6:00 PM"
            android:textSize="13sp"
            android:fontFamily="@font/titillium_web_light"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="Shastri Nagar\nMulund West"
            android:textSize="12sp"
            android:fontFamily="@font/titillium_web_light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/team1Image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/default_logo"/>
                <TextView
                    android:id="@+id/team1name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REAL\nMADRID"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/titillium_web_light"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/team1Image"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:weightSum="3">

                <TextView
                    android:id="@+id/team1Score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:ignore="NestedWeights"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/titillium_web"
                    android:text="3"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:ignore="NestedWeights"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/titillium_web"
                    android:text="-"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/team2Score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:ignore="NestedWeights"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/titillium_web"
                    android:text="2"
                    android:textAlignment="center"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/team2Image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/default_logo"/>
                <TextView
                    android:id="@+id/team2name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MANCHESTER\nUNITED"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/titillium_web_light"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/team2Image"/>
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>